    <header class="top-0 w-100">
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="#">Remote Book Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                    <div style="display:flex; gap:16px;">
                    <ul class="navbar-nav" id="go-management-btn">
                        <li class="nav-item">
                            <a class="btn btn-outline-primary bg-primary text-dark fw-bold" asp-controller="Book" asp-action="BuyorSell">Management page</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-outline-primary bg-danger text-white fw-bold" asp-controller="Book" asp-action="Logout">Sign Out</a>
                        </li>
                    </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const element = document.getElementById("go-management-btn");
            if (!element) return; // Guard clause if element doesn't exist

            const path = window.location.pathname;

            if (/Login/.test(path) || path === '/' || path.includes("SignUPPage") || path.includes("PasswordChange")) {
                element.style.display = "none";
            } else {
                element.style.display = "inline";
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

    <div class="center-form">
        <div class="form-box">
            <h3>&#128100;User SignUp</h3>
        <hr />
        <form asp-action="SignUPPage" method="post">
            <label asp-for="Name"><b>Name:</b></label>
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" class="validation-message"></span>

            <label asp-for="Email"><b>Email:</b></label>
            <input type="email" asp-for="Email" />
            <span asp-validation-for="Email" class="validation-message"></span>

            <label asp-for="Pass"><b>Password:</b></label>
            <input type="password" asp-for="Pass" />
            <span asp-validation-for="Pass" class="validation-message"></span>

            @if (ViewBag.Success != null)
            {
                <p style="text-align:center" class="success-msg"><b>@ViewBag.Success</b></p>
            }

            @if (ViewBag.Error != null)
            {
                <p style="text-align:center" class="already-registered"><b>@ViewBag.Error</b></p>
            }
            <div style="display:flex;justify-content:center">
            <button type="submit" class="sub">Submit</button>
            </div>
                <p style="text-align:initial;margin-top:10px;text-align:center"><a class="text-primary" asp-action="LoginPage"><b>Login Account</b></a></p>
        </form>
    </div>
</div>
</body>

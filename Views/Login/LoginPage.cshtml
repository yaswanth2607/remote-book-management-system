<div class="center-form">
    <div class="form-box">
            <p style="color:green; font-weight:bold">@ViewBag.Success</p>
            <h2 style="text-align:center;color: #3b82f6;font-weight: 600;">&#128273;User SignIn</h2>
        <hr />
        <form asp-action="LoginPage" method="post">
            <label class="EmailText"><b>Email:</b></label>
            <input type="email" asp-for="Email" required />
            <span asp-validation-for="Email" class="validation-message"></span>

            <label class="PassText"><b>Password:</b></label>
            <input type="password" asp-for="Pass" required />
            <span asp-validation-for="Pass" class="validation-message"></span>

            @if (ViewBag.Invalid != null)
            {
                <p style="text-align:center" class="error-msg"><b>@ViewBag.Invalid</b></p>
            }

            @if (ViewBag.Create != null)
            {
                <p style="text-align:center" class=" succ-msg"><b>@ViewBag.Create</b></p>
            }
            @if (ViewBag.Invalidpass != null)
            {
                <p style="text-align:center" class="invalid-msg"><b>@ViewBag.Invalidpass</b></p>
            }
            <div style="display:flex;justify-content:center">
                <button type="submit" class="sub">Submit</button>
            </div>
        </form>
            <p style="text-align:initial;margin-top:10px;text-align:center">
                <a style="font-weight: 600;" class="text-primary" asp-action="PasswordChange"><b>Forgot Password?</b></a>
            </p>
            <p style="text-align:initial;margin-top:10px;text-align:center"><a style="font-weight: 600;" class="text-primary" asp-action="SignUPPage"><b>Create Account</b></a></p>
    </div>
</div>
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

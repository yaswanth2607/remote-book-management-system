<div class="center-form">
    <div class="form-box">
            <h2 style="text-align:center;color: #3b82f6;font-weight: 600;">&#x2713; Change Password</h2>
        <form asp-action="PasswordChange" method="post">
            <label>Email:</label>
            <input type="email" name="Email" required />
            <span asp-validation-for="Email" class="validation-message"></span>

            <label>New Password:</label>
            <input type="password" name="Pass" required />
            <span asp-validation-for="Pass" class="validation-message"></span>

            <div style="display:flex; align-items:center">
                    <button class="btn" type="submit">&#x2713;Change Password</button>
            </div>
            @if (ViewBag.success != null)
            {
                <p style="text-align:center" class="succ-msg"><b>@ViewBag.success</b></p>
            }
            @if (ViewBag.error != null)
            {
                <p style="text-align:center" class="error-msg"><b>@ViewBag.error</b></p>
            }
    </form>
    <p style="text-align:initial;margin-top:10px;text-align:center"><a class="text-primary" asp-action="LoginPage"><b>Login Account</b></a></p>
    </div>
</div>
</body>
</html>
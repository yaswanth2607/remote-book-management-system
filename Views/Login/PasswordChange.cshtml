@model Privacy_Folder.Models.LoginDetails
@{
    ViewData["Title"] = "Change Password";
}
<html>
<head>
<style>
     body {
         background: linear-gradient(to bottom right, #e0f2fe, #f0f9ff); /* soft gradient */
         font-family: 'Segoe UI', sans-serif;
         margin: 0;
         padding: 0;
     }

    .center-form {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    span.validation-message {
          color: orange;
          font-size: 0.9em;
          font-weight: bolder;
    }

    .form-box {
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
        background-color: #ffffff;
        width: 350px;
        height:65%;
    }

        .form-box label {
            display: block;
            margin-top: 20px;
            color: #1f2937;
            font-weight: 600;

        }

        .form-box input[type="email"],
        .form-box input[type="password"] {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            box-sizing: border-box;
            border: 1px solid #cbd5e1;
            border-radius: 6px;
            background-color: #f8fafc;
            transition: border-color 0.3s ease;

        }

        .form-box button {
            margin-top: 15px;
            padding: 8px 20px;
            width: 100%;
            background-color: #3b82f6;
            color: white;
            border: none;
            cursor: pointer;
            font-weight: 600;
            transition: background-color 0.3s ease;
            border-radius: 5px;
        }

    .error-msg {
        color: #dc2626;
        margin-top: 10px;
        font-weight:bolder;
    }

    .succ-msg {
        color: #059669;
        margin-top: 10px;
    }

    h2 {
        color: whitesmoke;
        text-align: center;
    }
    .btn:hover{
        background-color:blue
    }
    body {
        background-color: #e4cae8;
    }
</style>
</head>
<body>

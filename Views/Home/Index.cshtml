<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #1e1e1e;
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        footer {
            text-align: center;
            padding: 10px 0;
            background-color: #2c2c2c;
            color: #ccc;
        }

        .outer1{
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            padding: 40px 20px;
        }

        .outer2{
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            padding: 40px 20px;
        }

        .Box1 {
            height: 300px;
            width: 400px;
            border-radius: 12px;
            margin: 20px;
        }

        .Box2 {
            /* remove margin-left:52% and height/width */
            border-radius: 15px;
            margin: 40px;
            height:300px;
            width:300px;
        }

        .Description1{
            max-width: 600px;
            margin: 20px;
            padding: 20px;
        }
        .Description2{
            max-width:600px;
            margin:30px;
            padding:20px;
        }
        .Description1 h5 {
             color: #4ade80;
             font-weight: bold;
        }

        .Description2 h5 {
            color: #4ade80;
            font-weight: bold;
        }
        .quote h3 {
            color: #fff;
            font-weight: 600;
            margin-top: 20px;
        }

        .btn-group {
            margin-top: 30px;
        }

        .btn-group .btn {
            margin-right: 15px;
            min-width: 100px;
        }
        .marq{
            font-weight:bolder;
        }
    </style>
</head>
<body>

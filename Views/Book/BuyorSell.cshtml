    <div class="container">
        <!-- Cards Section -->
        <div class="row main-section justify-content-center">
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img class="card-img-top" src="~/SellBooks.jpg" alt="Card image">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Sell Books</h5>
                        <p class="card-text"><em>List your books to sell to other readers in your area.</em></p>
                        <a asp-controller="Book" asp-action="Sell" class="btn btn-primary mt-auto">Sell Books</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img class="card-img-top" src="~/ExploreBooks.jpg" alt="Card image">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Explore Books</h5>
                        <p class="card-text"><em>Browse books added by others and find your next read.</em></p>
                        <a asp-controller="Book" asp-action="ViewAll" class="btn btn-primary mt-auto">Explore Books</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img class="card-img-top" src="~/Delete.jpeg" alt="Card image">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Delete Your Books Data</h5>
                        <p class="card-text"><em>Remove books you've listed using your credentials.</em></p>
                        <a asp-controller="Book" asp-action="DeleteBook" class="btn btn-primary mt-auto">Delete Data</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@model List<SecondHandBookEkartApp.Models.Book>

@{
    ViewData["Title"] = "Here Are The Available Books In The Specified Location";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #e0f7fa, #f1f8ff);
            font-family: 'Segoe UI', sans-serif;
        }

        .no-books {
            background-color: #fff3cd;
            padding: 25px;
            border-radius: 10px;
            text-align: center;
            font-weight: bold;
            color: #856404;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        }

        .table-container {
            margin-top: 10%;
            background-color: white;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.05);
        }

        h2 {
            color: #0d6efd;
            font-weight: bold;
            text-align: center;
        }

        .table th {
            background-color: #e0e7ff;
        }

        .btn-buy {
            font-weight: bold;
            background-color: #0d6efd;
            color: white;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-buy:hover {
                background-color: #0a58ca;
            }

        .btn-manage {
            color: white;
        }
    </style>
</head>
<body>

    <div class="container-fluid">

        @if (Model.Count == 0)
        {
            <div class="no-books mt-5" style="position:absolute; top:10%;width:80%">
                <h4>No Books Are Available In The Specified Location</h4>
            </div>
            <a asp-controller="Book" asp-action="ViewAll" style="position:absolute; right:60px; top:10%;" class="btn btn-primary">Explore More</a>
        }
        else
        {
            <div class="table-container ">
                <h2>@ViewData["Title"]</h2>
                <a asp-controller="Book" asp-action="ViewAll" style="position:absolute; right:60px; top:10%;" class="btn btn-primary">Explore More</a>
                <div class="table-responsive mt-4">
                    <table class="table table-bordered table-hover align-middle text-center">
                        <thead class="table-light">
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th>Location</th>
                                <th>Seller Name</th>
                                <th>Stock</th>
                                <th>Mobile Number</th>
                                <th>Buy</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.Author</td>
                                    <td>₹@item.Price</td>
                                    <td>@item.Category</td>
                                    <td>@item.Location</td>
                                    <td>@item.SellerName</td>
                                    <td>@item.StockAvailable</td>
                                    <td>@item.MobileNumber</td>
                                    <td>
                                        <a asp-controller="Book" asp-action="Note" class="btn btn-buy">Buy Now</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
    @* <a asp-controller="Book" asp-action="BuyorSell" style="position:absolute; left:20px; top:10%;" class="btn btn-primary">Management Page</a> *@
</body>
</html>

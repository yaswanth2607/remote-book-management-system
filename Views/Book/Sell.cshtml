@model SecondHandBookEkartApp.Models.Book
@{
    ViewData["Title"] = "Sell";
}
<html>
<head>
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
        body {
            background: linear-gradient(to bottom right, #e0f2fe, #f0f9ff); /* soft gradient */
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
        }

    .sell-container {
        max-width: 600px;
        margin: 60px auto;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
    }

        .sell-container h2 {
            text-align: center;
            margin-bottom: 25px;
            background-color: #ffffff;
        }

    .form-label {
            display: block;
            margin-top: 14px;
            color: #1f2937;
            font-weight: 600;
    }

    .form-control {
        border-radius: 5px;
        border-color:black;
    }

    .btn-submit {
        width: 100%;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        padding: 10px;
    }

        .btn-submit:hover {
            background-color: #007bff;
            color: white;
        }

    .note {
        font-size: 0.85rem;
        color: #ffc;
    }

    .message {
        margin-top: 20px;
        text-align: center;
        font-weight: bold;
        color: #ffeb3b;
    }

     .Box1{
         height:400px;
         width:400px;
         border-radius:20px;
     }
</style>
</head>
<body>

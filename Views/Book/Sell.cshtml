<div class="sell-container">
    <h2>Sell Your Book</h2>
    <form asp-action="Sell" method="post">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" type="text" required/>
        </div>

        <div class="mb-3">
            <label asp-for="Author" class="form-label">Author</label>
            <input asp-for="Author" class="form-control" type="text" required/>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" class="form-control" type="number" required/>
        </div>

        <div class="mb-3">
            <label asp-for="Category" class="form-label">Category</label>
            <input asp-for="Category" class="form-control" type="text" required/>
        </div>

        <div class="mb-3">
            <label asp-for="Location" class="form-label">Location</label>
            <p><strong>Note:First Letter Need be Capitalize</strong></p>
            <input asp-for="Location" class="form-control" type="text" required/>
        </div>

        <div class="mb-3">
            <label asp-for="SellerName" class="form-label">Seller Name</label>
            <input asp-for="SellerName" class="form-control" type="text" required />
        </div>

        <div class="mb-3">
            <label asp-for="MobileNumber" class="form-label">Mobile Number</label>
            <input asp-for="MobileNumber" class="form-control" type="text" required/>
        </div>

        <div class="mb-3">
            <label asp-for="StockAvailable" class="form-label">Stock Available</label>
            <input asp-for="StockAvailable" class="form-control" type="number" required/>
        </div>

        <div class="mb-3">
            <label asp-for="Deletekey" class="form-label">Delete Key</label>
            <small class="note d-block text-black">Note: This key is used when you want to delete your book data from the selling database.</small>
            <input asp-for="Deletekey" class="form-control" type="text" re/>
        </div>

        <button type="submit" class="btn-submit bg-primary">Submit</button>
    </form>
            @* <a asp-controller="Book" asp-action="BuyorSell" style="position:absolute; left:20px; top:8%;" class="btn btn-primary">ManageMent Page</a> *@
    @if (ViewBag.msg != null)
    {
        <div class="message text-primary">@ViewBag.msg</div>
    }
        @if(ViewBag.msgg != null)
        {
            <div class="message text-primary">@ViewBag.msgg</div>
        }
    </div>
</body>
</html>

@{
    ViewData["Title"] = "Delete Book";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Delete Book</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to bottom right, #e0f2fe, #f0f9ff); /* soft gradient */
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
        }
        .delete-container {
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
            background-color: #ffffff;
            max-width: 400px;
            margin: 80px auto;
        }

        .form-label {
            font-weight: bold;
            color: #1f2937;
        }

        .btn-delete {
            background-color: #dc3545;
            color: #fff;
            font-weight: bold;
        }

         .btn-delete:hover {
            background-color: #c82333;
         }
    </style>
</head>
<body >
    @* <header style="width:100%">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Remote Book Management System</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                </ul>
            </div>
        </nav>
        </header> *@
    <div class="container ">
        <div class="delete-container">
            <h3 class="text-center mb-4" style="color:black;font-weight:bold">Delete Book</h3>
            <hr />

            @if (ViewBag.error != null)
            {
                <div class="alert alert-danger">@ViewBag.error</div>
            }
            @if (ViewBag.msg != null)
            {
                <div class="alert alert-success">@ViewBag.msg</div>
            }

            <form method="post" asp-action="DeleteBook">
                <div class="mb-3">
                    <label class="form-label">Seller Name:</label>
                    <input type="text" name="SellerName" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Mobile Number:</label>
                    <input type="text" name="MobileNumber" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Delete Key:</label>
                    <input type="text" name="Deletekey" class="form-control" required />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-delete">Delete Book</button>
                </div>
            </form>
        </div>
    </div>
    @* <a asp-controller="Book" asp-action="BuyorSell" style="position:absolute; left:20px; top:8%;" class="btn btn-primary">Management Page</a> *@
</body>
</html>

